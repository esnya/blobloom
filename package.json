{
  "name": "blobloom",
  "version": "0.0.1",
  "private": true,
  "description": "Git size-history visualizer",
  "type": "module",
  "scripts": {
    "start": "npm run build && tsx src/server/index.ts",
    "lint": "eslint \"**/*.ts?(x)\" --max-warnings=0",
    "format": "prettier \"**/*.{js,ts,tsx,json,md}\" --write",
    "build": "vite build",
    "dev": "vite",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "diff-sequences": "^29.6.3",
    "express": "^5.1.0",
    "isomorphic-git": "^1.30.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-transition-group": "^4.4.5",
    "ws": "^8.18.2",
    "zod": "^3.25.65"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-transition-group": "^4.4.12",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "tsx": "^4.6.3",
    "typescript": "^5.2.2",
    "vite": "^6.3.5"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  },
  "engines": {
    "node": ">=20"
  }
}
